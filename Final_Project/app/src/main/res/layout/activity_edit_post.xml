<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".NewPostActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="20dp">

            // -- POST NAME --
            <TextView
                android:id="@+id/post_title_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Post Title"
                android:textColor="#284b63"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_title_header"
                android:hint="Give your post a title:"
                android:textSize="20sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/title_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="20dp">

            // -- CATEGORY RADIO BUTTONS --
            <TextView
                android:id="@+id/category_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="#284b63"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/category_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_header">

                <RadioButton
                    android:id="@+id/button_trade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trade"
                    android:textColor="#284b63"
                    android:textSize="17dp"/>
                <RadioButton
                    android:id="@+id/button_donation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donation"
                    android:textColor="#284b63"
                    android:textSize="17dp"/>
                <RadioButton
                    android:id="@+id/button_donation_req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donation Request"
                    android:textColor="#284b63"
                    android:textSize="17dp"/>
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/details_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Details"
                android:textColor="#284b63"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_header"
                android:hint="Anything else you'd like to add?"
                android:textSize="20sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/details_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        // -- TOGGLE (BOOLEAN) SELECTION FOR AVAILABILITY --
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/avail_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Completed?"
                android:textColor="#284b63"/>

            <Switch
                android:id="@+id/avail_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/avail_header"
                android:layout_marginTop="5dp"
                android:checked="false"
                android:hint="Toggle on if transaction has been made:      "
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp">

            <Button
                android:id="@+id/post_button"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="#fc9e4f"
                android:text="SAVE EDITS"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_marginBottom="35dp"
                android:onClick="onSaveButtonClick"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/post_button"
                android:background="#d9d9d9"
                android:text="CANCEL"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_marginBottom="35dp"
                android:onClick="onCancelButtonClick"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>