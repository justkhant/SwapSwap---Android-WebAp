<html>

<head>
	<link rel="stylesheet" type="text/css" href="public/css/search_by_school.css">
</head>

<body>

	<%- include ('partials/header') %>
	
<div class="header">
			<form class="form" method="POST" action="/">
				<h1>Find <span>Teachers</span> by <span>School.</span></h1>

			<div class="form_box">
				<input class="school_input" name="search_school" type="text" placeholder="Name of School"
				value="<%= qs.search_school %>"/>

				<div class="dropdowns">
					<select name="school">
						<option>All Schools</option>
						<option value="0">Jefferson Middle School</option>
						<option value="1">Drexel University</option>
						<option value="2">Pennsylvania State University</option>
						<option value="3">University of New Mexico</option>
						<option value="4">University of Pennsylvania</option>
						<option value="5">Zora Elementary</option>
					</select>
				</div>

				<div class="button">
					<button class="button search_button" type="submit" formaction="/pullSchool">SEARCH</button>
				</div>
			</div>

			
		</form>
		</div>

		</body>

</html>