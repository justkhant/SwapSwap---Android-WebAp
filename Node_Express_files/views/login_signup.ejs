<html>

<head>
	<title>Login and Sign Up</title>
	<link href="public/css/login_signup.css" rel="stylesheet" type="text/css">
</head>

<body>
	<div class="forms_box">

	<div class="forms">
		<form class="login_form" method="POST" action="/">
			<input type="text" name="login_email" placeholder="Username" value="<%= qs.login_email %>" />
			<input type="password" name="login_password" placeholder="Password" value="<%= qs.login_password %>"/>
			<button type="submit" formaction="/home">Log In</button>
		</form>
		<% if (qs.invalid_username) { %>
		<div class="error-text fadeOut">
			<p>Wrong username or password!</p>
		</div>
		<% } %>
		<% if (qs.empty_fields) { %>
		<div class="error-text fadeOut">
			<p>Please type in a username and password!</p>
		</div>
		<% } %>

		<form class="signup_form" method="POST" action="/">
            <input type="text" name="signup_name" placeholder="Full Name" value="<%= qs.signup_name %>"/>
            <input type="email" name="signup_email" placeholder="Email" value="<%= qs.signup_email %>"/>
            <input type="password" name="signup_password" placeholder="Password"/>
			<button type = "submit" formaction="/signup">SIGN UP</button>
		</form>

		<% if (qs.signup_success) { %>
		<div class="success-text fadeOut">
			<p>Account Created!</p>
		</div>
		<% } else if (qs.signup_empty) {%>
		<div class="error-text fadeOut">
			<p>Please enter the required fields!</p>
		</div>
		<% } else if (qs.account_exists) { %>
		<div class="error-text fadeOut">
			<p>Account Already Exists!</p>
		</div>
		<% } %>
	</div>
	</div>
</body>
</html>

